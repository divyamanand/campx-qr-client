{
  "name": "campx-qr-scanner",
  "version": "0.0.1",
  "description": "Batch PDF QR/Barcode Scanner with disk-based logging",
  "main": "main/electron-main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron . --dev\"",
    "vite-dev": "vite",
    "electron": "electron . --dev",
    "build": "vite build && electron-builder",
    "build:win": "vite build && electron-builder --win",
    "build:mac": "vite build && electron-builder --mac",
    "build:linux": "vite build && electron-builder --linux"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.88",
    "@napi-rs/canvas-win32-x64-msvc": "^0.1.88",
    "@zxing/browser": "^0.1.5",
    "jsqr": "^1.4.0",
    "pdf-to-img": "^5.0.0",
    "pdfjs-dist": "^5.4.530",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-qr-barcode-scanner": "^2.1.20",
    "unpdf": "^1.4.0",
    "zxing-wasm": "^2.2.4"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^6.4.1",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.campx.qrscanner",
    "productName": "CampX QR Scanner",
    "files": [
      "main/**/*",
      "renderer/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
